<h2>Calculate your carbon footprint!</h2>

<% food_category = 1 %>
<% transportation_category = 2 %>
<% lifestyle_category = 3 %>

  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

<%=form_tag '/responses' %>
<%=label_tag @question.content %>
<%=hidden_field_tag 'survey_id', @survey.id %>
<%=hidden_field_tag 'question_id', @question.id %>

<% if @question.category_id == food_category %>
    <%= render 'food_choices' %>
<%end%>

<% if @question.category_id == transportation_category %>
    <%= render 'transportation_choices' %>
<%end%>

<% if @question.category_id == lifestyle_category %>
    <%= render 'lifestyle_choices' %>
<%end%>
